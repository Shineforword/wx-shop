/* 引入字体图标 */
@import "./styles/iconfont.wxss";

/* 在微信小程序中不支持通配符选择*/
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
image{
  width: 100%;
}

/* 主题颜色 通过变量来实现(原生css和wxss支持)*/
page{
  /* 定义主题颜色 (使用方法:var(--themeColor))*/
  --themeColor:#eb4450;
  /* 定义统一字体大小 */
  font-size: 28rpx;
}