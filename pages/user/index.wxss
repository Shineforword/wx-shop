/* pages/user/index.wxss */
page {
  background: #f5f5f5;
}
/* 上部用户信息 */
.user_wrap {
  background: #ffffff;
  height: 30vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_bg_wrap {
  width: 100%;
  height: 100%;
  position: relative;
}
.user_bg {
  height: 100%;
  /* 高斯模糊 */
  filter: blur(3rpx);
  filter: opacity(0.8);
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 头像 */
.user_icon_wrap {
  position: absolute;
  top: 100rpx;
  left: 30rpx;
}
.user_info_icon {
  height: 160rpx;
  width: 160rpx;
  border-radius: 80rpx;
}
/* 昵称国家 */
.user_info_wrap {
  position: absolute;
  top: 140rpx;
  left: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.user_info_name {
  text-align: left;
  margin-left: 30rpx;
  color: #333333;
  font-size: 35rpx;
}
.user_info_nation {
  text-align: left;
  margin-top: 10rpx;
  margin-left: 30rpx;
  color: #333333;
  font-size: 28rpx;
}

/* user_content */
.user_content {
  position: relative;
}
.user_main {
  position: absolute;
  top: -40rpx;
  width: 90%;
  left: calc(100vw * 0.05);
}
.history_wrap {
  background: #ffffff;
  border-radius: 10rpx;
  display: flex;
}
.history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.history_wrap navigator .history_num {
  color: var(--themeColor);
}
.history_wrap navigator .history_name {
  color: #333333;
}

/*  orders_wrap*/
.orders_wrap {
  margin-top: 20rpx;
  width: 100%;
  height: 180rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #fff;
}
.orders_title_wrap {
  width: 100%;
  flex: 1;
}
.orders_content {
  width: 100%;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.orders_content navigator {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.orders_content navigator text {
  font-size: 40rpx;
  color: var(--themeColor);
}
.orders_content navigator .order_name {
  text-align: center;
}
.orders_title_wrap .order_title {
  width: 100%;
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  font-weight: 600;
  text-align: left;
  color: #333333;
}
/* 地址管理 */
.address_manager_wrap {
  margin-top: 20rpx;
  font-size: 30rpx;
  height: 90rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding-left: 30rpx;
  line-height: 90rpx;
}
/* 服务 */
.service_wrap {
  margin-top: 20rpx;
  height: 270rpx;
  border-radius: 10rpx;
  display: flex;
  background-color: #fff;
  flex-direction: column;
}

.service_wrap .service_item {
  flex: 1;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.service_wrap navigator {
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: solid 1rpx #f5f5f5;
}
.service_wrap navigator:nth-last-child(1) {
  display: flex;
  justify-content: space-between;
}
.service_wrap navigator .service_tel {
  flex: 1;
}
.service_wrap navigator .tel {
  flex: 1;
  text-align: right;
}
.service_wrap navigator:nth-last-child(1) {
  border-bottom: none;
}

/* 推荐 */
.user_share_wrap {
  margin-top: 20rpx;
  font-size: 30rpx;
  height: 90rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding-left: 30rpx;
  line-height: 90rpx;
}
