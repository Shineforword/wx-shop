/* pages/goods_detail/index.wxss */
.goods_swiper swiper {
  height: 825rpx;
}
.goods_price {
  padding: 15rpx 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
/* 商品名称 */
.goods_name_row {
  display: flex;
  border-bottom: solid 20rpx #f5f5f5;
}
.goods_name_row .goods_name {
  flex: 5;
  padding: 0 30rpx;
  font-size: 30rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  color: #666666;
  font-size: 30rpx;
  border-left: solid 1rpx #cccccc;
}

/* 图文详情 */
.goods_info .good_info_title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
  padding: 20rpx;
}

/* 底部工具栏 */
page {
  padding-bottom: 90rpx;
}
.bottom_tool {
  /* 固定定位 */
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  background: #ffffff;
}
.tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btn_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  background-color: #ffa500;
  font-weight: 600;
}
.btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  background-color: var(--themeColor);
  font-weight: 600;
}
/* 客服替代 */
.tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
