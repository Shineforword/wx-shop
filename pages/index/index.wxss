page {
  background: #f5f5f5;
}

/* 轮播图 */
.index_swiper swiper {
  width: 750rpx;
  height: 282rpx;
}

.index_swiper swiper image {
  width: 100%;
}

/* 分类导航 */
.index_cates {
  display: flex;
  height: auto;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  width: 750rpx;
  background: #ffffff;
}

.index_cates navigator {
  flex-flow: 1;
  width: 20%;
  height: auto;
}

.index_cates navigator image {
  width: 100%;
}

/* 楼层 */
.index_floor{
  background: #f5f5f5;
  height: auto;
}
.floor_group{
  background: #ffffff;
  margin-top: 15rpx;
  height: auto;
}
.floor_title {
  display: flex;
  height: 90rpx;
  width: 100%;
  padding: 0 30rpx;
  color: var(--themeColor);
  font-size: 35rpx;
  justify-content: center;
  align-items: center;
  background: #ffffff;
}

.floor_list {
  background: #ffffff;
  width: 750rpx;
  height: auto;
}
.floor_list navigator {
  float: left;
  width: 50%;
  height: 250rpx;
}
.floor_list navigator image{
  padding: 5rpx;
  width: 100%;
  height: 100%;
}
.floor_list navigator:first-child {
  height: 500rpx;
}