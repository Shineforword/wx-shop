<!--components/Tabs/Tabs.wxml-->
<view class="tabs">
<view class="tabs_title">
<view 
wx:for = "{{tabs}}"
wx:key = "id"
class="tabs_item {{item.isActive?'active':''}}"
bindtap="handleItemtap"
data-index="{{index}}"
>{{item.value}}</view>
</view>
<view class="tabs_content">
<!-- 插槽 -->
<slot></slot>
</view>
</view>